@using NTierECommerce.MVC.Areas.Admin.Models.ViewModels;
@model CategoryVM
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Update</h1>

<div class="row mx-4">
    <div class="col-md-6">
        <form method="post">
            <div>
                <label>ID</label>
                <input class="form-control" type="text" asp-for="@Model.ID" disabled />
            </div>
            <div>
                <label>Category Name</label>
                <input class="form-control" type="text" asp-for="@Model.CategoryName" />
            </div>
            <div>
                <label>Description</label>
                <input class="form-control" type="text" asp-for="@Model.Description" />
            </div>
			@if (Model.IsActive == true)
			{
				<div class="form-check">
					<input asp-for="IsActive" value="false" class="form-check-input" type="radio" name="IsActive" id="flexRadioDefault1">
					<label class="form-check-label" for="flexRadioDefault1">
						Pasif
					</label>
				</div>
				<div class="form-check">
					<input asp-for="IsActive" value="true" class="form-check-input" type="radio" name="IsActive" id="flexRadioDefault2" checked>
					<label class="form-check-label" for="flexRadioDefault2">
						Aktif
					</label>
				</div>
			}
			else
			{
				<div class="form-check">
					<input asp-for="IsActive" value="false" class="form-check-input" type="radio" name="IsActive" id="flexRadioDefault1" checked>
					<label class="form-check-label" for="flexRadioDefault1">
						Pasif
					</label>
				</div>
				<div class="form-check">
					<input asp-for="IsActive" value="true" class="form-check-input" type="radio" name="IsActive" id="flexRadioDefault2">
					<label class="form-check-label" for="flexRadioDefault2">
						Aktif
					</label>
				</div>
			}
            <div class="my-3">
                <button class="btn btn-primary" type="submit">Güncelle</button>
            </div>
        </form>
    </div>
</div>