@model List<OrderVM>
@{
    ViewData["Title"] = "Order List";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row-mx-4">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h1>Siparişler</h1>
            </div>
            <div class="card-body">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Tarih</th>
                            <th>Sipariş No</th>
                            <th>Toplam Tutar</th>
                            <th>İşlem</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.OrderDate</td>
                                <td>@item.OrderId</td>
                                <td>@item.TotalPrice ₺</td>
                                <td class="col-sm-3">
                                    <a asp-controller="Order" asp-action="Detail" asp-route-orderId="@item.OrderId" class="btn btn-primary btn-sm">Detay</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>
