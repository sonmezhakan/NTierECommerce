@using NTierECommerce.MVC.Areas.Admin.Models.ViewModels;
@model ProductDetailVM
@{
	ViewData["Title"] = "Details";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Details</h1>

<div class="row mx-4">
	<div class="col-md-6 d-flex">
		<div>
			<img src="/images/product/@Model.ImagePath" alt="product_image" width="480px" height="480px" />
		</div>
	</div>
	<div class="col-md-6">
		<div>
			<label>ID</label>
			<input class="form-control" type="text" asp-for="@Model.ID" />
		</div>
		<div>
			<label>Category Name</label>
			<input class="form-control" type="text" asp-for="@Model.CategoryName" />
		</div>
		<div>
			<label>Product Name</label>
			<input class="form-control" type="text" asp-for="@Model.ProductName" />
		</div>
		<div>
			<label>Unit Price</label>
			<input class="form-control" type="text" asp-for="@Model.UnitPrice" />
		</div>
		<div>
			<label>Units In stock</label>
			<input class="form-control" type="text" asp-for="@Model.UnitsInStock" />
		</div>
		<label>Statu</label><br />
		@if (Model.IsActive == false)
		{
			<div class="form-check">
				<input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault1">
				<label class="form-check-label" for="flexRadioDefault1">
					Pasif
				</label>
			</div>
		}
		else
		{
			<div class="form-check">
				<input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault2" checked>
				<label class="form-check-label" for="flexRadioDefault2">
					Aktif
				</label>
			</div>
		}
		</div>
</div>
</div>