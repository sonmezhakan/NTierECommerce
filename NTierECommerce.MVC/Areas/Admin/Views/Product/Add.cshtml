@using NTierECommerce.MVC.Areas.Admin.Models.ViewModels;
@model ProductVM
@{
    ViewData["Title"] = "Add";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Add</h1>

<div class="row mx-4">
    <div class="col-md-4">
        <div class="alert">
            @if (TempData["Error"] != null)
            {
                <span>@TempData["Error"]</span>
            }
        </div>
        <form method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label>Kategori</label>
                <select asp-items="@ViewBag.CategoryListItem" asp-for="CategoryId" class="form-control">
                    <option selected="" disabled>Lütfen Kategori Seçin</option>
                </select>
            </div>
            <div class ="form-group">
                <label>Product Name</label>
                <input class="form-control" type="text" asp-for="ProductName"/>
            </div>
            <div class="form-group">
                <label>Unit Price</label>
                <input class="form-control" type="number" asp-for="UnitPrice"/>
            </div>
            <div class="form-group">
                <label>Units In Stock</label>
                <input asp-for="UnitsInStock" type="number" class="form-control">
            </div>

            <div class="form-check">
                <input  asp-for="IsActive" value="false" class="form-check-input" type="radio" name="IsActive" id="flexRadioDefault1">
                     <label class="form-check-label" for="flexRadioDefault1">
                    Pasif
                    </label>
            </div>
            <div class="form-check">
                <input asp-for="IsActive" value="true" class="form-check-input" type="radio" name="IsActive" id="flexRadioDefault2" checked>
                     <label class="form-check-label" for="flexRadioDefault2">
                     Aktif
                     </label>
            </div>
            
            <div class="form-group">
                <input type="file" class="form-control" name="productImage" />
            </div>
            <button class="btn btn-primary" type="submit">Ekle</button>
        </form>
    </div>

</div>