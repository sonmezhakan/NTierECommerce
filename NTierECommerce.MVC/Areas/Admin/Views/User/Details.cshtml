@using NTierECommerce.MVC.Areas.Admin.Models.ViewModels;
@model UserRegisterVM
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Details</h1>

<div class="row mx-4">
    <div class="col-md-6">
        <div>
            <label>ID</label>
            <input class="form-control" type="text" asp-for="@Model.ID" />
        </div>
        <div>
            <label>User Name</label>
            <input class="form-control" type="text" asp-for="@Model.UserName" />
        </div>
        <div>
            <label>E-Mail</label>
            <input class="form-control" type="text" asp-for="@Model.Email" />
        </div>
        <div>
            <label>Phone Number</label>
            <input class="form-control" type="text" asp-for="@Model.PhoneNumber" />
        </div>
        <div>
            <label>Address</label>
            <textarea class="form-control" type="text" asp-for="Address"></textarea>
        </div>
        
    </div>
</div>